pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                echo "Source code already checked out by Jenkins"
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t healthcare-app .'
            }
        }

        stage('Run Container') {
            steps {
                sh 'docker rm -f healthcare || true'
                sh 'docker run -d -p 5000:5000 --name healthcare healthcare-app'
            }
        }

        stage('Test Application') {
            steps {
                sh 'sleep 10'
                sh 'curl http://localhost:5000'
            }
        }

        stage('Cleanup') {
            steps {
                sh 'docker stop healthcare || true'
                sh 'docker rm healthcare || true'
            }
        }
    }
}

